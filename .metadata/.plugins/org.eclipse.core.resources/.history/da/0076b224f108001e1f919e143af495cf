	<script>
		function goDelete(idx){
			$.ajax({
				url : "board/delete/"+idx,
				type : "get",
				success : loadList,
				error : function(){
					alert("ì‹¤íŒ¨")
				}
			})
		}
		
		//DB(board) ì „ì²´ ì •ë³´(dataë§Œ) ê°€ì ¸ì˜¤ê¸°
		function loadList(){
			$.ajax({
				url : "board/ajax",
				type : "get",
				dataType : "json", // ì„œë²„ì—ì„œ ë°˜í™˜í•´ì£¼ëŠ” ë°ì´í„° íƒ€ì…
				success : updateTable,
				error : function(){
					alert("loadList ì‹¤íŒ¨")
				}
			})
		}
		
		function updateTable(data){
			var result = "<table class='table table-bordered table-hover'>";
			   result += "<thead>"
			   result += "<tr>";
			   result += "<th>ë²ˆí˜¸</th>";
			   result += "<th>ì œëª©</th>";
			   result += "<th>ì‘ì„±ì</th>";
			   result += "<th>ì‘ì„±ì¼</th>";
			   result += "<th>ì‚­ì œ</th>";
			   result += "</tr>";
			   result += "</thead>"
			   //ë°˜ë³µë¬¸
			   result += "<tbody>";
			   $.each(data, (index,vo)=> { 
			      result += "<tr>";
			      result += "<td></td>";
			      result += "<td></td>";
			      result += "<td></td>";
			      result += "<td></td>";
			      result += "<td></td>"
			      result += "</tr>";
			   })
			   result += "</tbody>";
			   result += "<tr>";
			   result += "<td colspan='6'>";
			   result += "<button class='btn btn-primary btn-sm'>ê¸€ì“°ê¸°</button>";
			   result += "</td>";
			   result += "</tr>";
			   result += "</table>";
		}
