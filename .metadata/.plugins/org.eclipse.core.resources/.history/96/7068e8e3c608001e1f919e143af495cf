package com.smhrd.board.controller;

import org.springframework.stereotype.Controller;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.PostMapping;
import org.springframework.web.bind.annotation.RequestPart;
import org.springframework.web.multipart.MultipartFile;

import com.smhrd.board.domain.Board;

@Controller
public class BoardController {
	
	@GetMapping("/board")
	public String boardList() {
		return "boardlist";
	}
	
	@GetMapping("/board/writeform")
	public String writeForm() {
		return "boardform";
	}
	
	//@RequestPart : multipart/form-data에 특화된 어노테이션
	@PostMapping("/board/write")
	public void write(Board b, @RequestPart("photo") MultipartFile file) {
		System.out.println(b.getTitle()+","+b.getContent()+","+b.getWriter());
		System.out.println(file);
		//이미지 file -> 저장(지정한 경로에)
		//board table(DB) -> 파일 이름만 저장
	}
}
